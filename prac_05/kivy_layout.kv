# This is a Kv file.
# It contains the declarations of the widgets that will be displayed.
BoxLayout:
    orientation: 'vertical'
    Label:
        text: app.status_text
        font_size: 60
        size_hint_y: 0.2
    BoxLayout:
        BoxLayout:
        id: names_box
        orientation: 'vertical'
        size_hint_y: 0.7
        spacing: 10
        padding: 10

    BoxLayout:
        size_hint_y: 0.1
        spacing: 10
        padding: 10

        Button:
            text: "Up"
            on_press: app.handle_press(1)

        Button:
            text: "Down"
            on_press: app.handle_press(-1)

    Label:
        text: "I did this :)"
        size_hint_y: 0.1

